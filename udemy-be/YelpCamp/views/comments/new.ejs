<% include ../partials/header %></div>

<div class="container">
    <h1 style="text-align: center">Add a Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 20px auto">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="text" name="comment[text]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="author" name="comment[author]">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block">
            </div>
        </form>
         <a href="/campgrounds">Go Back</a>
    </div>



    </div>


<% include ../partials/footer %>